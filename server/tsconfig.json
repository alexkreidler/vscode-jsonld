{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",

    "noUnusedLocals": false
